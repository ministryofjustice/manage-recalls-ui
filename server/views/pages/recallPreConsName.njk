{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Book a recall - How does the name appear on the previous convictions sheet (pre-cons)?" %}

{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: backLinkUrl("licence-name", urlInfo) if recall.middleNames else backLinkUrl("/find-person?nomsNumber=" + recall.nomsNumber, urlInfo)
    }) }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% if errors %}
                {{ govukErrorSummary({
                    titleText: "There is a problem",
                    errorList: errors.list,
                    attributes: {
                        'data-qa': 'error-list'
                    }
                }) }}
            {% endif %}
            <span class="govuk-caption-l">Book a recall for {{ recall.fullName }}</span>

            <form novalidate action="{{ makeUrl('pre-cons-name', urlInfo) }}" method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                <div class='govuk-body govuk-form-group govuk-!-margin-bottom-8'>

                    {% set yesDetailHtml %}
                        {{ govukInput({
                            name: "previousConvictionMainName",
                            id: "previousConvictionMainName",
                            label: {
                                text: "Provide the full name on the pre-cons"
                            },
                            value: formValues.previousConvictionMainName,
                            classes: "govuk-input--width-30",
                            errorMessage: errorMessage(errors.previousConvictionMainName)
                        }) }}
                    {% endset -%}
                    {% if recall.previousConvictionMainNameCategory == 'OTHER' and recall.previousConvictionMainName %}
                        <input type='hidden' name='hasExistingPreviousConvictionMainName' value='1' />
                    {% endif %}
                    {{ govukRadios({
                        idPrefix: "previousConvictionMainNameCategory",
                        name: "previousConvictionMainNameCategory",
                        fieldset: {
                            legend: {
                                text: "How does " + recall.fullName + "'s name appear on the previous convictions sheet (pre-cons)?",
                                classes: "govuk-fieldset__legend--l",
                                isPageHeading: true
                            }
                        },
                        hint: {
                            text: 'Check the forename(s) and surname on the pre-cons'
                        },
                        items: [
                            {
                                value: "FIRST_LAST",
                                text: recall.firstName + " " + recall.lastName,
                                checked: formValues.previousConvictionMainNameCategory == 'FIRST_LAST'
                            },
                            {
                                value: "FIRST_MIDDLE_LAST",
                                text: recall.firstName + " " + recall.middleNames + " " + recall.lastName,
                                checked: formValues.previousConvictionMainNameCategory == 'FIRST_MIDDLE_LAST'
                            } if recall.middleNames else undefined,
                            {
                                value: "OTHER",
                                text: "Other name",
                                checked: formValues.previousConvictionMainNameCategory == 'OTHER',
                                conditional: {
                                    html: yesDetailHtml
                                }
                            }
                        ],
                        errorMessage: errorMessage(errors.previousConvictionMainNameCategory)
                    }) }}
                </div>
                <div>
                    <button class="govuk-button"
                            data-qa='continueButton'>
                        Continue
                    </button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

