{% extends "../partials/layout.njk" %}

{% set pageTitle = makePageTitle("What is the warrant reference number?", errors) %}

{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: backLinkUrl("/#notInCustody", urlInfo)
    }) }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% include '../partials/error-summary.njk' %}

            <form novalidate action="{{ makeUrl(urlInfo.currentPage, urlInfo) }}" method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                {{ govukInput({
                    label: {
                        text: "What is the warrant reference number?",
                        classes: "govuk-label--l",
                        pageHeading: true
                    },
                    hint: {
                        text: 'For example, 02RC/1234567C12345. Also called the End Warrant System (EWS) number'
                    },
                    id: "warrantReferenceNumber",
                    name: "warrantReferenceNumber",
                    value: formValues.warrantReferenceNumber,
                    classes: "govuk-input--width-10",
                    errorMessage: errorMessage(errors.warrantReferenceNumber)
                }) }}
                {{ formSubmitButton({ label: 'Save and return'}) }}
            </form>
        </div>
    </div>

{% endblock %}

