{% extends "../partials/layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{%- from "moj/components/search/macro.njk" import mojSearch -%}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Assess a recall - " + person.firstName + " " + person.lastName + "'s recall has been stopped" %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            <div class="govuk-panel govuk-panel--neutral govuk-!-margin-bottom-6">
                <h1 class="govuk-panel__title">
                    {{ person.firstName }} {{ person.lastName }}'s recall has been stopped
                </h1>
            </div>
            <p class="govuk-body">This recall will not appear in any to-do lists and will be shown as stopped in any reports.</p>
            <p class="govuk-body">No further action is required.</p>
            <h2 class="govuk-heading-m">What to do now</h2>
            <p class="govuk-body">If you need to change the recall type to a standard one, you can contact <span data-qa='managerName'>{{ referenceData.sensitiveInfo.manager.name }}</span> on <span data-qa='managerPhone'>{{ referenceData.sensitiveInfo.manager.phone }}</span> (between 9am to 5pm, Monday to Friday) or in her absence please contact one of the recall Team Leaders.</p>
            <div class="govuk-!-margin-top-8">
                <p class="govuk-body"><a href="/" class="govuk-button" role="button">Assess another recall</a> </p>
            </div>
        </div>
    </div>

{% endblock %}
