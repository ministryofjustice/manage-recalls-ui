{% extends "../partials/layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{%- from "moj/components/search/macro.njk" import mojSearch -%}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Dossier created and sent" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">
                    Dossier created and sent for {{ recall.fullName }}
                </h1>
                <span class='govuk-!-display-none' data-qa='recallId'>{{recall.recallId}}</span>
            </div>
            <p class='govuk-body'>
                <a href="/" class="govuk-link" role="button">Back to recalls</a>
            </p>

        </div>
    </div>
{% endblock %}
