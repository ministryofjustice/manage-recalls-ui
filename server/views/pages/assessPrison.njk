{% extends "../partials/layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{%- from "moj/components/search/macro.njk" import mojSearch -%}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Assess a recall - In which prison is " + person.firstName + " " + person.lastName + "?" %}

{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: "/persons/" + person.nomsNumber + "/recalls/" + recall.recallId + "/assess-licence"
    }) }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% if errors %}
                {{ govukErrorSummary({
                    titleText: "There is a problem",
                    errorList: errors.list,
                    attributes: {
                        'data-qa': 'error-list'
                    }
                }) }}
            {% endif %}
            <span class="govuk-caption-l"
                  data-qa="addRecallTypeCaption">Assess a recall for {{ person.firstName }} {{ person.lastName }}</span>
            <form novalidate action="/persons/{{ person.nomsNumber }}/recalls/{{ recall.recallId }}/assess-prison" method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-two-thirds-from-desktop">
                        {% if referenceData.prisonList %}
                            {{ govukSelect({
                                id: "currentPrison",
                                name: "currentPrison",
                                label: {
                                    text: "Which prison is " + person.firstName + " " + person.lastName + " in?",
                                    classes: "govuk-label--l",
                                    isPageHeading: true
                                },
                                items: selectItems( referenceData.activePrisonList, formValues.currentPrison, true),
                                errorMessage: {
                                    text: "Please select a prison"
                                } if errors.currentPrison else undefined
                            }) }}
                        {% endif %}
                        <div class="govuk-!-margin-top-8">
                            <button class="govuk-button" data-qa="continueButton">Continue</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

{% block bodyEnd %}
    {{ super() }}
    {{ autocomplete({
        name: 'currentPrison',
        cspNonce: cspNonce
    })
    }}
{% endblock %}