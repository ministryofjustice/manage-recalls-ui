{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: backLinkUrl("assess-custody-status" if isDefined(recall.inCustodyAtAssessment) else "assess-licence", urlInfo)
    }) }}
{% endblock %}

{% block content %}
    {%  set titlePrefix = "Assess a recall for " %}
