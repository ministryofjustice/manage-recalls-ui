{% if recall.legalRepresentativeInfo %}
<h2 class='govuk-heading-m govuk-!-margin-top-9' id='legalRep'>Legal representative details</h2>
<dl class="govuk-summary-list">
  <div class="govuk-summary-list__row">
    <dt class=" govuk-summary-list__key">
      Legal representative
    </dt>
    <dd class=" govuk-summary-list__value" data-private>
      <p class='govuk-body' data-qa='legalRepresentativeInfo_fullName'>{{ recall.legalRepresentativeInfo.fullName }}</p>
      <p class='govuk-body'>
        <a class='govuk-link' href='mailto:{{ recall.legalRepresentativeInfo.email }}' target='_blank' rel='noopener' data-qa='legalRepresentativeInfo_email'>
          {{ recall.legalRepresentativeInfo.email }}
        </a>
      </p>
      <p class='govuk-body' data-qa='legalRepresentativeInfo_phoneNumber'>{{ recall.legalRepresentativeInfo.phoneNumber }}</p>
    </dd>
    <dd class=" govuk-summary-list__actions">
      <a href='{{ changeLinkUrl('secondary-dossier-legal-rep', urlInfo, 'legalRep') }}' data-qa='legalRepChange' class='govuk-link'>
        Change <span class="govuk-visually-hidden"> legal representative details</span>
      </a>
    </dd>
  </div>
</dl>
{% endif %}
