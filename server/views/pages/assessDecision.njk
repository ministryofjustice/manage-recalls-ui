{% extends "../partials/layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{%- from "moj/components/search/macro.njk" import mojSearch -%}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Assess a recall - Decision on recall recommendation" %}

{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: "/persons/" + person.nomsNumber + "/recalls/" + recall.recallId + "/assess"
    }) }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% if errors %}
                {{ govukErrorSummary({
                    titleText: "There is a problem",
                    errorList: errors.list,
                    attributes: {
                        'data-qa': 'error-list'
                    }
                }) }}
            {% endif %}
            <span class="govuk-caption-l" data-qa="addRecallTypeCaption">Assess a recall for {{ person.firstName }} {{ person.lastName }}</span>
            <form action="/persons/{{ person.nomsNumber }}/recalls/{{ recall.recallId }}/assess-decision" method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                {% set yesHtml %}
                    {{ govukTextarea({
                        name: "agreeWithRecallDetailYes",
                        id: "agreeWithRecallDetailYes",
                        label: {
                            text: "Provide more detail"
                        },
                        value: formValues.agreeWithRecallDetailYes,
                        errorMessage: {
                            text: 'Provide more detail'
                        } if errors.agreeWithRecallDetailYes else undefined
                    }) }}
                {% endset -%}
                {% set noHtml %}
                    {{ govukTextarea({
                        name: "agreeWithRecallDetailNo",
                        id: "agreeWithRecallDetailNo",
                        label: {
                            text: "Provide more detail"
                        },
                        value: formValues.agreeWithRecallDetailNo ,
                        errorMessage: {
                            text: 'Provide more detail'
                        } if errors.agreeWithRecallDetailNo else undefined
                    }) }}
                {% endset -%}
                {{ govukRadios({
                    idPrefix: "agreeWithRecall",
                    name: "agreeWithRecall",
                    fieldset: {
                        legend: {
                            html: "<span data-qa='recommended-recall-length-text'>Do you agree with the fixed term " + recall.recallLengthFormatted + " day recall recommendation?</span>",
                            classes: "govuk-fieldset__legend--l",
                            isPageHeading: true
                        }
                    },
                    items: [
                        {
                            value: "YES",
                            text: "Yes, proceed with the recommended fixed recall type",
                            checked: formValues.agreeWithRecall == 'YES',
                            conditional: {
                                html: yesHtml
                            }
                        },
                        {
                            value: "NO_STOP",
                            text: "No, cancel the recall",
                            checked: formValues.agreeWithRecall == 'NO_STOP',
                            conditional: {
                                html: noHtml
                            }
                        }
                    ],
                    errorMessage: {
                        text: 'Select one'
                    } if errors.agreeWithRecall else undefined
                }) }}

                <div class="govuk-!-margin-top-4">
                    <button class="govuk-button" data-qa="continueButton">Continue</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
