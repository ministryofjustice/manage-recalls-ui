{
  "name": "manage-recalls-ui",
  "version": "0.0.1",
  "description": "Manage Recalls UI",
  "repository": "git@github.com:ministryofjustice/manage-recalls-ui.git",
  "license": "MIT",
  "scripts": {
    "copy-views": "cp -R server/views dist/server/",
    "compile-sass": "sass --no-source-map --load-path=node_modules/govuk-frontend --load-path=node_modules/@ministryofjustice/frontend ./assets/sass/application.sass:./assets/stylesheets/application.css ./assets/sass/application-ie8.sass:./assets/stylesheets/application-ie8.css --style compressed",
    "build": "npm run clean && npm run compile-sass && tsc && npm run copy-views",
    "local:build": "npm install && npm run build && npm run lint && npm run test && ./scripts/start-for-integration-tests.sh && npm run int-test && ./scripts/stop-local.sh",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"Node,Styles\" -c \"yellow.bold,cyan.bold\" \"node -r ts-node/register/transpile-only --inspect=0.0.0.0 server.ts\" \"npm run compile-sass -- --watch\"",
    "start:e2e": "export $(cat e2e.env) && npm run start:dev",
    "start:feature": "export $(cat feature.env) && npm run start:dev",
    "kill": "npx kill-port 3000,9229",
    "record-build-info": "node ./bin/record-build-info",
    "swagger-to-ts": "node ./scripts/swagger-to-ts.js",
    "lint": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc",
    "test": "jest --forceExit",
    "test:coverage": "jest --forceExit --coverage",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "rm -rf cypress/downloads && cypress run --config video=false",
    "int-test-ui": "rm -rf cypress/downloads && cypress open",
    "clean": "rm -rf dist build",
    "prepare": "npx husky install",
    "pact-test": "rm -rf pact/pacts/* && jest --forceExit --config=./pact/jest.pact.config.js"
  },
  "engines": {
    "node": "14.17.3",
    "npm": "6.14.13"
  },
  "config": {
    "pact_do_not_track": true
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "coveragePathIgnorePatterns": [
      "@types"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(spec|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.{json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^0.2.4",
    "accessible-autocomplete": "^2.0.3",
    "@sentry/node": "^6.11.0",
    "@sentry/tracing": "^6.11.0",
    "agentkeepalive": "^4.1.4",
    "applicationinsights": "^2.0.0",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^5.2.0",
    "cookie-session": "^1.4.0",
    "csurf": "^1.11.0",
    "date-fns": "^2.23.0",
    "date-fns-tz": "^1.1.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "express-session": "^1.17.2",
    "form-data": "^4.0.0",
    "govuk-frontend": "^3.13.0",
    "helmet": "^4.6.0",
    "http-errors": "^1.8.0",
    "jquery": "^3.6.0",
    "jwt-decode": "^3.1.2",
    "multer": "^1.4.2",
    "nocache": "^2.1.0",
    "nunjucks": "^3.2.3",
    "nunjucks-date": "^1.5.0",
    "passport": "^0.4.1",
    "passport-oauth2": "^1.5.0",
    "redis": "^3.1.2",
    "superagent": "^6.1.0",
    "ts-node": "^10.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@jest-mock/express": "^1.4.2",
    "@opentelemetry/api": "^1.0.0-rc.3",
    "@pact-foundation/pact": "^9.16.0",
    "@types/bunyan": "^1.8.6",
    "@types/bunyan-format": "^0.2.3",
    "@types/compression": "^1.7.0",
    "@types/connect-flash": "0.0.36",
    "@types/connect-redis": "^0.0.16",
    "@types/cookie-session": "^2.0.42",
    "@types/csurf": "^1.11.1",
    "@types/express-request-id": "^1.4.1",
    "@types/express-session": "^1.17.3",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.14.41",
    "@types/nunjucks": "^3.1.4",
    "@types/nunjucks-date": "0.0.6",
    "@types/passport": "^1.0.6",
    "@types/passport-oauth2": "^1.4.10",
    "@types/redis": "^2.8.28",
    "@types/superagent": "^4.1.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "concurrently": "^6.1.0",
    "cypress": "^7.6.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-multi-reporters": "^1.5.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "fs": "0.0.1-security",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-html-reporter": "^3.4.0",
    "jest-junit": "^12.0.0",
    "jest-pact": "^0.9.1",
    "jsonwebtoken": "^8.5.1",
    "kill-port": "^1.6.1",
    "lint-staged": "^11.0.0",
    "mkdirp": "^1.0.4",
    "mocha": "^9.0.3",
    "mocha-junit-reporter": "^2.0.0",
    "nock": "^13.0.11",
    "node-notifier": ">=8.0.1",
    "openapi-typescript-codegen": "^0.9.3",
    "pdf-parse": "^1.1.1",
    "prettier": "^2.3.0",
    "sass": "^1.34.0",
    "supertest": "^6.1.3",
    "tar": "^4.4.15",
    "ts-jest": "^26.5.6",
    "typescript": "^4.4.2",
    "wiremock-rest-client": "^1.7.0",
    "y18n": ">=4.0.1"
  }
}
