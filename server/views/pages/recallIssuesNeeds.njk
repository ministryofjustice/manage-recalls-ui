{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Book a recall - Are there any issues or needs?" %}

{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: backLinkUrl("prison-police", urlInfo)
    }) }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% if errors %}
                {{ govukErrorSummary({
                    titleText: "There is a problem",
                    errorList: errors.list,
                    attributes: {
                        'data-qa': 'error-list'
                    }
                }) }}
            {% endif %}
            <span class="govuk-caption-l">Book a recall for {{ person.firstName }} {{ person.lastName }}</span>
            <h1 class="govuk-heading-l">
                Are there any issues or needs?
            </h1>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            <form novalidate action="{{ formActionUrl('issues-needs', urlInfo) }}" method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                <div class='govuk-body govuk-form-group govuk-!-margin-bottom-8' id='vulnerabilityDiversityGroup'>
                    {% set vulnerabilityDiversityYesHtml %}
                        {{ govukTextarea({
                            id: "vulnerabilityDiversityDetail",
                            name: "vulnerabilityDiversityDetail",
                            label: {
                                text: "Provide more detail"
                            },
                            value: formValues.vulnerabilityDiversityDetail,
                            errorMessage: {
                                text: errors.vulnerabilityDiversityDetail.text
                            } if errors.vulnerabilityDiversityDetail else undefined
                        }) }}
                    {% endset -%}

                    {{ govukRadios({
                        idPrefix: "vulnerabilityDiversity",
                        name: "vulnerabilityDiversity",
                        fieldset: {
                            legend: {
                                text: "Are there any vulnerability issues or diversity needs?",
                                classes: "govuk-fieldset__legend--m"
                            }
                        },
                        items: [
                            {
                                value: 'YES',
                                text: "Yes",
                                conditional: {
                                    html: vulnerabilityDiversityYesHtml
                                },
                                checked: true if formValues.vulnerabilityDiversity == 'YES'
                            },
                            {
                                value: 'NO',
                                text: "No",
                                checked: true if formValues.vulnerabilityDiversity == 'NO'
                            }
                        ],
                        errorMessage: {
                            text: errors.vulnerabilityDiversity.text
                        } if errors.vulnerabilityDiversity else undefined
                    }) }}
                </div>
                <div class='govuk-body govuk-form-group govuk-!-margin-bottom-8' id='contrabandGroup'>
                    {% set contrabandYesHtml %}
                        {{ govukTextarea({
                            id: "contrabandDetail",
                            name: "contrabandDetail",
                            label: {
                                text: "Provide more detail"
                            },
                            value: formValues.contrabandDetail,
                            errorMessage: {
                                text: errors.contrabandDetail.text
                            } if errors.contrabandDetail else undefined
                        }) }}
                    {% endset -%}

                    {{ govukRadios({
                        idPrefix: "contraband",
                        name: "contraband",
                        fieldset: {
                            legend: {
                                text: "Do you think " + person.firstName + " " + person.lastName + " will bring contraband into prison?",
                                classes: "govuk-fieldset__legend--m"
                            }
                        },
                        items: [
                            {
                                value: 'YES',
                                text: "Yes",
                                conditional: {
                                    html: contrabandYesHtml
                                },
                                checked: true if formValues.contraband == 'YES'
                            },
                            {
                                value: 'NO',
                                text: "No",
                                checked: true if formValues.contraband == 'NO'
                            }
                        ],
                        errorMessage: {
                            text: errors.contraband.text
                        } if errors.contraband else undefined
                    }) }}
                </div>
                <div class='govuk-body govuk-form-group govuk-!-margin-bottom-8' id='mappaLevelGroup'>
                    {{ govukSelect({
                        id: "mappaLevel",
                        name: "mappaLevel",
                        label: {
                            text: "What is " + person.firstName + " " + person.lastName + "'s MAPPA level?",
                            classes: "govuk-label--m"
                        },
                        items: selectItems(
                            referenceData.mappaLevels
                        , formValues.mappaLevel),
                        errorMessage: {
                            text: errors.mappaLevel.text
                        } if errors.mappaLevel else undefined
                    }) }}
                </div>
                <div>
                    <button class="govuk-button"
                       data-qa='continueButton'>
                        Continue
                    </button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

