{% extends "../partials/layout.njk" %}

{% set pageTitle = makePageTitle("Prepare and send dossier for recall", errors) %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% include '../partials/recallInfoConfirmation.njk' %}
            <h1 class="govuk-heading-xl">
                Prepare and send dossier for <span data-private>{{ recall.fullName }}</span> recall
            </h1>
            {% set fromPage = 'dossier-recall' %}
            {% include '../partials/recallInformationHeading.njk' %}
            <div class="govuk-body-l" data-qa="secondaryDossierDueDate">
                {{ dueDateTimeLabel({dueItemLabel: 'Dossier', dueIsoDateTime: recall.secondaryDossierDueDate, includeTime: false }) }}
            </div>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% include '../partials/fullRecallInfoSections.njk' %}
            <div class="govuk-form-group govuk-!-margin-top-8" >
                <a class="govuk-button" data-qa='continueButton' href='{{ makeUrl('secondary-dossier-legal-rep', urlInfo) }}'>
                    Prepare and send dossier
                </a>
            </div>
        </div>
    </div>

{% endblock %}
