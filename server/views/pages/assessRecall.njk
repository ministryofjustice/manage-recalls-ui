{% extends "../partials/layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{%- from "moj/components/search/macro.njk" import mojSearch -%}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Assess a recall for " + person.firstName + " " + person.lastName %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-xl">
                Assess a recall for {{ person.firstName }} {{ person.lastName }}
                <div class="govuk-heading-l govuk-!-margin-top-8">
                    Recall information
                </div>
            </h1>
            <div class="govuk-body-l" data-qa="recallAssessmentDueText">{{ recallAssessmentDueText }}</div>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% include '../partials/personDetails.njk' %}
            {% include '../partials/recallDetails.njk' %}
            {% include '../partials/issuesDetails.njk' %}
            {% include '../partials/sentenceDetails.njk' %}
            {% include '../partials/policeDetails.njk' %}
            {% include '../partials/probationDetails.njk' %}
            {% include '../partials/uploadedDocuments.njk' %}
            <div class="govuk-form-group govuk-!-margin-top-9">
                <a href="/persons/{{ person.nomsNumber }}/recalls/{{ recall.recallId }}/assess-decision" role='button' class="govuk-button" data-module="govuk-button"
                   data-qa="continueButton">
                    Assess recall
                </a>
            </div>
        </div>
    </div>

{% endblock %}
