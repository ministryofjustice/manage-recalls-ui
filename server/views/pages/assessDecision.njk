{% extends "../partials/layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{%- from "moj/components/search/macro.njk" import mojSearch -%}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Decision on recall recommendation" %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% if errors %}
                {{ govukErrorSummary({
                    titleText: "There is a problem",
                    errorList: errors.list,
                    attributes: {
                        'data-qa': 'error-list'
                    }
                }) }}
            {% endif %}
            <span class="govuk-caption-l" data-qa="addRecallTypeCaption">Assess a recall for {{ person.firstName }} {{ person.lastName }}</span>
            <h1 class="govuk-heading-l">
                What is your decision on the recall recommendation?
            </h1>
            <form action="/persons/{{ person.nomsNumber }}/recalls/{{ recall.recallId }}/assess-decision" method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

                {{ govukRadios({
                    idPrefix: "agreeWithRecallRecommendation",
                    name: "agreeWithRecallRecommendation",
                    fieldset: {
                        legend: {
                            html: "<span data-qa='recommended-recall-length-text'>Do you agree with the recommended recall length of " + recall.recallLengthFormatted + "</span>",
                            classes: "govuk-fieldset__legend--s"
                        }
                    },
                    items: [
                        {
                            value: "YES",
                            text: "Yes"
                        },
                        {
                            value: "NO",
                            text: "No"
                        }
                    ],
                    errorMessage: {
                        text: 'Select one'
                    } if errors.agreeWithRecallRecommendation else undefined
                }) }}

                <div class="govuk-!-margin-top-8">
                    <button class="govuk-button" data-qa="continueButton">Continue</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
