{% if isDefined(recall.additionalLicenceConditions) %}
  <h2 class='govuk-heading-m govuk-!-margin-top-9' id='additionalLicenceConditionsGroup'>Additional licence conditions</h2>
  <dl class="govuk-summary-list">
    <div class="govuk-summary-list__row">
      <dt class=" govuk-summary-list__key">
        Additional licence conditions
      </dt>
      <dd class=" govuk-summary-list__value">
        <pre class='govuk-body'
             data-qa='additionalLicenceConditions' data-private>
          {% if recall.additionalLicenceConditions == true %}{{ recall.additionalLicenceConditionsDetail }}{% elif recall.additionalLicenceConditions == false %}None{% else %}Not available{% endif %}

        </pre>
      </dd>
      <dd class=" govuk-summary-list__actions">
        <a href='{{ changeLinkUrl('dossier-letter', urlInfo, 'additionalLicenceConditionsGroup') }}' data-qa='additionalLicenceConditionsChange' class='govuk-link'>Change <span class="govuk-visually-hidden"> additional licence conditions</span></a>
      </dd>
    </div>
  </dl>
{% endif %}