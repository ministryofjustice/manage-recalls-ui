{#                    }) }}#}
                    {{ govukFileUpload({
                        id: 'signature',
                        name: 'signature',
                        label: {
                            text: 'Upload a signature'
                        }
                    }) }}

                    <img src="data:image/jpeg;base64,{{ user.signature }}"/>
                </div>
                <div>
                    <button class="govuk-button" data-qa='updateButton'>
                        Update
                    </button>
                </div>
            </form>
        </div>
