{
  "chromeWebSecurity": false,
  "baseUrl": "http://localhost:3000",
  "testFiles": "**/*.spec.js",
  "fixturesFolder": "integration_tests/fixtures",
  "integrationFolder": "integration_tests/integration",
  "pluginsFile": "integration_tests/plugins/index.js",
  "screenshotsFolder": "integration_tests/screenshots",
  "screenshotOnRunFailure": true,
  "supportFile": "integration_tests/support/index.js",
  "videosFolder": "integration_tests/videos",
  "reporter": "cypress-multi-reporters",
  "reporterOptions": {
    "configFile": "reporter-config.json"
  },
  "video": true,
  "videoUploadOnPasses": false,
  "taskTimeout": 60000,
  "env": {
    "manageRecallsUiUrl": "http://localhost:3000",
    "wiremockUrl": "http://localhost:9091",
    "uiClientId": "ppud-ui-client",
    "useStubs": ["hmpps-auth", "manage-recalls-api"]
  }
}
