{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Book a recall" %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% if errors %}
                {{ govukErrorSummary({
                    titleText: "There is a problem",
                    errorList: errors,
                    attributes: {
                        'data-qa': 'error-list'
                    }
                }) }}
            {% endif %}
            <span class="govuk-caption-l">Book a recall for {{ person.firstName }} {{ person.lastName }}</span>
            <h1 class="govuk-heading-l">
                Start here
            </h1>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
            <div class='govuk-body govuk-form-group'>Recall ID: <span data-qa='recallId'>{{ recall.recallId }}</span>
            </div>
            <div>
                <a class="govuk-button"
                   href='/persons/{{ person.nomsNumber }}/recalls/{{ recall.recallId }}/recall-type'>
                    Continue
                </a>
            </div>
        </div>
    </div>

{% endblock %}
