{% extends "../partials/layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{%- from "moj/components/search/macro.njk" import mojSearch -%}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Create dossier - Add information to the prison letter" %}

{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: backLinkUrl("assess", urlInfo)
    }) }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% if errors %}
                {{ govukErrorSummary({
                    titleText: "There is a problem",
                    errorList: errors.list,
                    attributes: {
                        'data-qa': 'error-list'
                    }
                }) }}
            {% endif %}
            <span class="govuk-caption-l" data-qa="addRecallTypeCaption">Create a dossier for {{ person.firstName }} {{ person.lastName }}</span>
            <h1 class='govuk-heading-l'>Add information to the prison letter</h1>
            <form novalidate action="{{ formActionUrl('dossier-letter', urlInfo) }}" method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                {% set yesHtml %}
                    {{ govukTextarea({
                        name: "additionalLicenceConditionsDetail",
                        id: "additionalLicenceConditionsDetail",
                        label: {
                            text: "Provide more detail"
                        },
                        classes: "govuk-!-width-three-quarters",
                        value: formValues.additionalLicenceConditionsDetail ,
                        errorMessage: {
                            text: errors.additionalLicenceConditionsDetail.text
                        } if errors.additionalLicenceConditionsDetail else undefined
                    }) }}
                {% endset -%}
                {{ govukRadios({
                    idPrefix: "additionalLicenceConditions",
                    name: "additionalLicenceConditions",
                    fieldset: {
                        legend: {
                            text: "Are there additional licence conditions?",
                            classes: "govuk-fieldset__legend--m"
                        }
                    },
                    items: [
                        {
                            value: "YES",
                            text: "Yes",
                            checked: formValues.additionalLicenceConditions == 'YES',
                            conditional: {
                                html: yesHtml
                            }
                        },
                        {
                            value: "NO",
                            text: "No",
                            checked: formValues.additionalLicenceConditions == 'NO'
                        }
                    ],
                    errorMessage: {
                        text: errors.additionalLicenceConditions.text
                    } if errors.additionalLicenceConditions else undefined
                }) }}


                {% set yesDetailHtml %}
                    {{ govukInput({
                        name: "differentNomsNumberDetail",
                        id: "differentNomsNumberDetail",
                        label: {
                            text: "NOMIS number " + person.firstName + " " + person.lastName + " is being held under"
                        },
                        value: formValues.differentNomsNumberDetail,
                        classes: "govuk-input--width-10",
                        errorMessage: {
                            text: errors.differentNomsNumberDetail.text
                        } if errors.differentNomsNumberDetail else undefined
                    }) }}
                {% endset -%}
                {{ govukRadios({
                    idPrefix: "differentNomsNumber",
                    name: "differentNomsNumber",
                    fieldset: {
                        legend: {
                            text: "Is " + person.firstName + " " + person.lastName + " being held under a different NOMIS number to the one on the licence?",
                            classes: "govuk-fieldset__legend--m"
                        }
                    },
                    items: [
                        {
                            value: "YES",
                            text: "Yes",
                            checked: formValues.differentNomsNumber == 'YES',
                            conditional: {
                            html: yesDetailHtml
                        }
                        },
                        {
                            value: "NO",
                            text: "No",
                            checked: formValues.differentNomsNumber == 'NO'
                        }
                    ],
                    errorMessage: {
                        text: errors.differentNomsNumber.text
                    } if errors.differentNomsNumber else undefined
                }) }}
                <div class="govuk-!-margin-top-4">
                    <button class="govuk-button" data-qa="continueButton">Continue</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
