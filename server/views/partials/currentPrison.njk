<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        {% include './error-summary.njk' %}
        {% if not urlInfo.fromPage %}
            {{ pageHeadingCaption({ action: titlePrefix, name: recall.fullName }) }}
        {% endif %}
        <form novalidate action="{{ makeUrl(urlInfo.currentPage, urlInfo) }}" method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds-from-desktop">
                    {{ govukSelect({
                        id: "currentPrison",
                        name: "currentPrison",
                        label: {
                            html: "Which prison is <span data-private>" + recall.fullName + "</span> in?",
                            classes: "govuk-label--l",
                            isPageHeading: true
                        },
                        items: selectItems( filterActiveItems(referenceData.prisons), formValues.currentPrison, true),
                        errorMessage: errorMessage(errors.currentPrison)
                    }) }}
                    <div class="govuk-!-margin-top-8">
                        <button class="govuk-button" data-qa="continueButton">Continue</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>