{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Offender profile" %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% if errors %}
            {{ govukErrorSummary({
                titleText: "There is a problem",
                errorList: errors,
                attributes: {
                    'data-qa': 'error-list'
                }
            }) }}
            {% endif %}
            <span class="govuk-caption-l">Book a recall for {{ offender.firstName }} {{ offender.lastName }}</span>
            <h1 class="govuk-heading-l">
                Upload documents
            </h1>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
           <div class='govuk-body'>Recall ID: <span  data-qa='recallId'>{{ recall.recallId }}</span></div>
        </div>
    </div>

{% endblock %}
