{% extends "../partials/layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{%- from "moj/components/search/macro.njk" import mojSearch -%}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Assess a recall - In which prison is " + person.firstName + " " + person.lastName + "?" %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% if errors %}
                {{ govukErrorSummary({
                    titleText: "There is a problem",
                    errorList: errors.list,
                    attributes: {
                        'data-qa': 'error-list'
                    }
                }) }}
            {% endif %}
            <span class="govuk-caption-l" data-qa="addRecallTypeCaption">Assess a recall for {{ person.firstName }} {{ person.lastName }}</span>
            <form action="/persons/{{ person.nomsNumber }}/recalls/{{ recall.recallId }}/assess-prison" method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

                {% if prisonList %}
                {{ govukSelect({
                    id: "currentPrison",
                    name: "currentPrison",
                    label: {
                        text: "In which prison is " + person.firstName + " " + person.lastName + "?",
                        classes: "govuk-label--l",
                        isPageHeading: true
                    },
                    items: selectItems(prisonList, formValues.currentPrison),
                    errorMessage: {
                        text: "Please select a prison"
                    } if errors.currentPrison else undefined
                })
                }}
                {% endif %}
                <div class="govuk-!-margin-top-8">
                    <button class="govuk-button" data-qa="continueButton">Continue</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
