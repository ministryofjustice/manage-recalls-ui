{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - View the recall" %}

{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: backLinkUrl("/", urlInfo)
    }) }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% if confirmationMessage %}
                {{ mojBanner({
                    type: confirmationMessage.type,
                    html: '<span data-qa="confirmation">' + confirmationMessage.text + '</span>' + (' <a href="' + confirmationMessage.link.href + '" class="govuk-link"> '+ confirmationMessage.link.text + '</a>' if confirmationMessage.link),
                    iconFallbackText: confirmationMessage.type
                }) }}
            {% endif %}
            <h1 class="govuk-heading-xl">
                View the recall for {{ recall.fullName }}
            </h1>
            {% include '../partials/recallInformationHeading.njk' %}
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% include '../partials/personDetails.njk' %}
            {% include '../partials/custodyDetails.njk' %}
            {% include '../partials/recallDetails.njk' %}
            {% include '../partials/issuesDetails.njk' %}
            {% include '../partials/sentenceDetails.njk' %}
            {% include '../partials/policeDetails.njk' %}
            {% include '../partials/probationDetails.njk' %}
            {% include '../partials/additionalLicenceConditions.njk' %}
            {% include '../partials/generatedDocuments.njk' %}
            {% include '../partials/uploadedDocuments.njk' %}
            {% include '../partials/missingDocuments.njk' %}
        </div>
    </div>

{% endblock %}
