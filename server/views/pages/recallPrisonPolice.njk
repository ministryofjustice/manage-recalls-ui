{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Book a recall - What is the local police force?" %}

{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: "/persons/" + person.nomsNumber + "/recalls/" + recall.recallId + "/last-release"
    }) }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {% if errors %}
                {{ govukErrorSummary({
                    titleText: "There is a problem",
                    errorList: errors.list,
                    attributes: {
                        'data-qa': 'error-list'
                    }
                }) }}
            {% endif %}
            <span class="govuk-caption-l">Book a recall for {{ person.firstName }} {{ person.lastName }}</span>

            <form novalidate action="/persons/{{ person.nomsNumber }}/recalls/{{ recall.recallId }}/prison-police" method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                <div class='govuk-body govuk-form-group govuk-!-margin-bottom-8'>
                    {{ govukInput({
                        label: {
                            text: "What is the local police force?",
                            classes: "govuk-label--l",
                            isPageHeading: true
                        },
                        id: "localPoliceForce",
                        name: "localPoliceForce",
                        value: formValues.localPoliceForce,
                        classes: "govuk-input--width-30",
                        errorMessage: {
                            text: 'Enter a police station name'
                        } if errors.localPoliceForce else undefined
                    }) }}
                </div>
                <div>
                    <button class="govuk-button"
                            data-qa='continueButton'>
                        Continue
                    </button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

